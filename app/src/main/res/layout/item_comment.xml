<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_comment_avatar_container"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#EEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_comment_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="用户名"
        android:textSize="12sp"
        android:textColor="#666"
        app:layout_constraintStart_toEndOf="@id/cv_comment_avatar_container"
        app:layout_constraintTop_toTopOf="@id/cv_comment_avatar_container" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="评论内容..."
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/layout_comment_like"
        app:layout_constraintStart_toEndOf="@id/cv_comment_avatar_container"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_user" />

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1小时前"
        android:textSize="10sp"
        android:textColor="#CCC"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_content"
        app:layout_constraintStart_toStartOf="@id/tv_comment_content"/>

    <LinearLayout
        android:id="@+id/layout_comment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_comment_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_comment_time">

        <ImageView
            android:id="@+id/iv_comment_like"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_like"/>

        <TextView
            android:id="@+id/tv_comment_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            android:textColor="#999"
            android:textSize="12sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
