<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_notif_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_notif_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="用户A 点赞了你的笔记"
        android:textColor="#111"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_notif_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_notif_avatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_notif_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="作品：《夏日》"
        android:textColor="#666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5分钟前"
        android:textColor="#999"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
