<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileActivity">

    <!-- 1. 顶部的工具栏 (保持不变) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="个人主页"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. 分割线 (1/3 处) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <!-- 3. 上半部分 (1/3) -->

    <!-- 圆形头像 (使用 CardView) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_profile">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="用户头像"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon" />
    </androidx.cardview.widget.CardView>

    <!-- 名字 -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="[用户名]"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_avatar"
        app:layout_constraintTop_toTopOf="@id/cv_avatar" />

    <!-- 软件账号 (名字下方, 字体小一号) -->
    <TextView
        android:id="@+id/tv_account_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="帐号: notemap_user_id"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="@id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />

    <!-- 个人签名 (头像下方) -->
    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="[这里是个人签名...]"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/guideline_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/cv_avatar"
        app:layout_constraintTop_toBottomOf="@id/cv_avatar" />


    <!-- 4. 标签栏 (在 1/3 分割线上) -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:tabIndicatorFullWidth="true"
        app:tabGravity="fill"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_works"
            android:text="作品" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_likes"
            android:text="点赞" />
    </com.google.android.material.tabs.TabLayout>


    <!-- 5. 下半部分 (2/3) - 内容容器 -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout">

        <!-- 占位符: 作品列表 (默认显示) -->
        <TextView
            android:id="@+id/tv_works_list_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="“作品”列表 (UI占位符)"
            android:textSize="18sp"
            android:visibility="visible" />

        <!-- 占位符: 点赞列表 (默认隐藏) -->
        <TextView
            android:id="@+id/tv_likes_list_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="“点赞”列表 (UI占位符)"
            android:textSize="18sp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- [已删除] 旧的退出登录按钮 -->

</androidx.constraintlayout.widget.ConstraintLayout>

