<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddNoteActivity">

    <!-- 1. 顶部的工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_note"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="笔记"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. 标题栏 (带字数统计) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_add_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:counterEnabled="true"
        app:counterMaxLength="50">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="添加标题"
            android:inputType="text"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 3. 横线分割 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4. 故事部分 (带字数统计) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_story"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:counterEnabled="true"
        app:counterMaxLength="400">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="在这里分享你的故事吧！"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLength="400" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 5. 添加图片 (正方形方框) -->
    <!-- 我用 CardView 来创建带阴影的方框 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout_story"
        app:layout_constraintStart_toStartOf="@id/input_layout_story">

        <ImageView
            android:id="@+id/iv_add_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="添加图片" />
    </androidx.cardview.widget.CardView>

    <!-- 6. 笔记类型栏 -->
    <RelativeLayout
        android:id="@+id/row_note_type"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/card_add_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔记类型"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_note_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icon_arrow_type"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/icon_arrow_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:rotation="90"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.5" />
    </RelativeLayout>

    <!-- 7. 拍摄地点栏 -->
    <RelativeLayout
        android:id="@+id/row_location"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/row_note_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍摄地点"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/icon_arrow_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:rotation="90"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.5" />

        <TextView
            android:id="@+id/tv_location_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击获取当前位置"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icon_arrow_location"
            android:layout_toEndOf="@id/tv_location_label"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:maxLines="1"
            android:ellipsize="end" />

    </RelativeLayout>

    <!-- 占位符: 发布按钮 -->
    <Button
        android:id="@+id/btn_publish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="发布笔记"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:backgroundTint="#C21E56"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
